{
  "name": "appointment-crm-api",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node dist/index.js",
    "build": "esbuild src/index.js --bundle --platform=node --format=esm --outfile=dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "db:setup": "prisma generate && prisma migrate deploy && node prisma/seed.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "@prisma/client": "^5.16.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.16.2"
  }
}